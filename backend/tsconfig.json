{
  "compilerOptions": {
    "target": "ESNext",                     
    "module": "ESNext",                     
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,                       
    "resolveJsonModule": true,
    "outDir": "dist"                      
  },
  "include": ["src/**/*.ts"],             
  "exclude": ["node_modules", "dist"]
}
